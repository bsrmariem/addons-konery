<?xml version='1.0' encoding='UTF-8'?>
<data>

    <record id="sale_order_crm_konery_custom_inh_form" model="ir.ui.view">
        <field name="name">Sale Order Inherit Konery Custom Form View</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">98</field>
        <field name="arch" type="xml">
            <data>
                <field name="partner_shipping_id" position="after">
                    <field name="opportunity_id" required="1"/>
                    <field name="user_id" context="{'default_sales_team_id': crm_team_id}" widget="many2one_avatar_user"/>
                    <field name="crm_team_id"/>
                    <field name="crm_user_company_ids" invisible="1"/>
                </field>
                <!-- Solicitud 20/06/23 para que las lÃ­neas de venta no puedan crear productos, sino crear y editar: -->
                <xpath expr="//field[@name='product_template_id']" position="attributes">
                    <attribute name="options">{'no_quick_create': True}</attribute>
                </xpath>
            </data>
        </field>
    </record>

</data>
