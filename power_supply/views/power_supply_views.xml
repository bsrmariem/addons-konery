<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="power_supply_default_tree" model="ir.ui.view">
        <field name="name">power.supply.default.tree</field>
        <field name="model">power.supply</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="power_supply_tree">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="pricelist_id"/>
                <field name="cups" optional="show"/>
                <field name="anual_power" optional="show"/>
                <field name="monitor" optional="hide"/>
                <field name="tag_ids" widget="many2many_tags" optional="hide"/>
                <field name="salesman_id" optional="hide"/>
                <field name="manager_id" optional="hide"/>
                <field name="tax_exception" optional="hide"/>
                <field name="location" optional="hide"/>
                <field name="monitor" optional="hide"/>
                <field name="monitor_type" optional="hide"/>
                <field name="meter" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="power_supply_default_form" model="ir.ui.view">
        <field name="name">power.contract.default.form</field>
        <field name="model">power.supply</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="main" string="Power supply">
                    <group name="basic_params">
                        <group>
                            <field name="energy_type"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="holding_id"/>
                            <field name="salesman_id"/>
                            <field name="manager_id"/>
                            <field name="tax_exception"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="dealer_id" context="{'default_is_dealer':True}"/>
                            <field name="pricelist_id" widget="selection"/>
                            <field name="cups"/>
                            <field name="anual_power"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook name="contract_nb">
                        <page name="contract" string="Contract">
                            <field name="contract_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="marketeer_id"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="type_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook name="power_nb">
                        <page name="power" string="Power">
                            <field name="contract_power_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="p1"/>
                                    <field name="p2"/>
                                    <field name="p3"/>
                                    <field name="p4"/>
                                    <field name="p5"/>
                                    <field name="p6"/>
                                    <field name="date_start"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <notebook name="communication_nb">
                        <page name="communication" string="Communication">
                            <group name="communication_group">
                                <group>
                                    <field name="meter"/>
                                    <field name="meter_note"/>
                                </group>
                                <group>
                                    <field name="monitor"/>
                                    <field name="monitor_type" attrs="{'invisible':[('monitor','=',False)]}"/>
                                    <field name="monitor_ip"
                                           attrs="{'invisible':['|',('monitor','=',False),('monitor_type','not in',['gprs','gsm'])]}"/>/>
                                    <field name="monitor_port"
                                           attrs="{'invisible':['|',('monitor','=',False),('monitor_type','not in',['gprs','gsm'])]}"/>/>
                                    <field name="monitor_phone"
                                           attrs="{'invisible':['|',('monitor','=',False),('monitor_type','!=','datadis')]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="power_supply_search" model="ir.ui.view">
        <field name="name">power.supply.search</field>
        <field name="model">power.supply</field>
        <field name="inherit_id" eval="False"/>
        <field name="arch" type="xml">
            <search string="Search Power Supply">
                <field name="name" filter_domain="['|', '|', '|', ('name', 'ilike', self), ('location', 'ilike', self), ('partner_id', 'ilike', self), ('holding_id', 'ilike', self)]"/>
                <field name="salesman_id"/>
                <field name="manager_id"/>
                <field name="dealer_id"/>
                <field name="tag_ids"/>
                <field name="cups" filter_domain="[('cups','ilike',self)]"/>
                <separator/>
                <filter string="Monitorized" name="monitor" domain="[('monitor', '=', True)]"/>
                <separator/>
                <filter string="GSM" name="gsm" domain="[('monitor_type','=','gsm')]"/>
                <filter string="GPRS" name="gsm" domain="[('monitor_type','=','gprs')]"/>
                <filter string="Datadis" name="gsm" domain="[('monitor_type','=','datadis')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="salesman_id" string="Salesperson" domain="[]" context="{'group_by' : 'salesman_id'}"/>
                    <filter name="manager_id" string="Manager" context="{'group_by': 'manager_id'}"/>
                    <filter name="partner_id" string="Partner" context="{'group_by': 'partner_id'}"/>
                    <filter name="dealer_id" string="Dealer" context="{'group_by': 'dealer_id'}"/>
                </group>
            </search>
        </field>
    </record>


</odoo>