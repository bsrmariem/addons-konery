<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="power_power_default_form" model="ir.ui.view">
        <field name="name">power.power.default.form</field>
        <field name="model">power.power</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="main" string="Powers">
                    <group name="administrative_data" string="Administrative data">
                        <field name="contract_id" readonly="1"/>
                        <field name="supply_id" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="date_on"/>
                    </group>
                    <div>
                        <table>
                            <tr>
                                <th><t>P1/Q</t></th>
                                <th><t>P2</t></th>
                                <th><t>P3</t></th>
                                <th><t>P4</t></th>
                                <th><t>P5</t></th>
                                <th><t>P6</t></th>
                            </tr>
                            <tr>
                                <td><field name="p1"/></td>
                                <td><field name="p2"/></td>
                                <td><field name="p3"/></td>
                                <td><field name="p4"/></td>
                                <td><field name="p5"/></td>
                                <td><field name="p6"/></td>
                            </tr>
                        </table>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

</odoo>