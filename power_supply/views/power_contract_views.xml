<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="power_contract_default_tree" model="ir.ui.view">
        <field name="name">power.contract.default.tree</field>
        <field name="model">power.contract</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="power_contract_tree">
                <field name="name"/>
                <field name="partner_id" optional="show"/>
                <field name="type_id" optional="show"/>
                <field name="marketeer_id" optional="show"/>
                <field name="marketeer_contact_id" optional="hide"/>
                <field name="origin_warranty" optional="hide"/>
                <field name="compromise" optional="hide"/>
                <field name="auto_renew" optional="hide"/>
                <field name="supply_id" optional="hide"/>
                <field name="date_end" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="power_contract_default_form" model="ir.ui.view">
        <field name="name">power.contract.default.form</field>
        <field name="model">power.contract</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="main" string="Contracts">
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group name="administrative_data" string="Administrative data">
                        <group>
                            <field name="marketeer_id" context="{'default_is_marketeer':True}"/>
                            <field name="marketeer_contact_id" context="{'default_is_marketeer':True}"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="supply_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="type_id"/>
                            <field name="origin_warranty"/>
                            <field name="compromise"/>
                            <field name="auto_renew"/>
                        </group>
                    </group>
                    <group name="power_data" string="Power">
                        <group>
                            <field name="date_on"/>
                        </group>
                    </group>
                    <div>
                        <table>
                            <tr>
                                <th><t>P1/Q</t></th>
                                <th><t>P2</t></th>
                                <th><t>P3</t></th>
                                <th><t>P4</t></th>
                                <th><t>P5</t></th>
                                <th><t>P6</t></th>
                            </tr>
                            <tr>
                                <td><field name="p1"/></td>
                                <td><field name="p2"/></td>
                                <td><field name="p3"/></td>
                                <td><field name="p4"/></td>
                                <td><field name="p5"/></td>
                                <td><field name="p6"/></td>
                            </tr>
                        </table>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>



</odoo>