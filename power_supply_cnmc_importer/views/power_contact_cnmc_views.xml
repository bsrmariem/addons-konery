<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="power_contact_cnmc_tree" model="ir.ui.view">
        <field name="name">power.contact.cnmc.tree</field>
        <field name="model">res.sim</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="power_sim_tree">
                <field name="name"/>
                <field name="iccid" optional="show"/>
                <field name="access_ip" optional="show"/>
                <field name="access_port" optional="hide"/>
                <field name="control_port" optional="show"/>
                <field name="active" optional="show"/>
                <field name="application_port" optional="hide"/>
                <field name="phone" optional="hide"/>
                <field name="state" optional="show"/>
                <field name="coverage" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="power_contact_cnmc_form" model="ir.ui.view">
        <field name="name">power.contact.cnmc.form</field>
        <field name="model">res.sim</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="main" string="SIM">
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group name="administrative_data" string="Administrative data">
                        <group>
                            <field name="iccid"/>
                            <field name="access_ip"/>
                            <field name="access_port"/>
                            <field name="control_port"/>
                            <field name="active"/>
                            <field name="application_port"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="state"/>
                            <field name="coverage"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    ########################## DISTRIBUTOR ###################################
    <record id="power_contact_cnmc_distributor_tree" model="ir.ui.view">
        <field name="name">power.contact.cnmc.distributor.tree</field>
        <field name="model">res.distributor</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="power_distributor_tree">
                <field name="name"/>
                <field name="active" optional="show"/>
                <field name="order_number" optional="hide"/>
                <field name="phone" optional="show"/>
                <field name="cif" optional="show"/>
                <field name="web" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="power_contact_cnmc_distributor_form" model="ir.ui.view">
        <field name="name">power.contact.cnmc.distributor.form</field>
        <field name="model">res.distributor</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="main" string="Distributor">
                    <h2>
                        <field name="name"/>
                    </h2>
                    <group name="administrative_data" string="Administrative data">
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="order_number"/>

                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="cif"/>
                            <field name="web"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    ############################## MARKETER #################################
    <record id="power_contact_cnmc_marketer_tree" model="ir.ui.view">
        <field name="name">power.contact.cnmc.marketer.tree</field>
        <field name="model">res.marketer</field>
        <field name="inherit_id" eval="False"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree name="power_marketer_tree">
                <field name="name"/>
                <field name="active" optional="show"/>
                <field name="order_number" optional="show"/>
                <field name="phone" optional="hide"/>
                <field name="sector" optional="show"/>
                <field name="cif" optional="show"/>
                <field name="date_discharge" optional="hide"/>
                <field name="date_leaving" optional="hide"/>
                <field name="web" optional="hide"/>
                <field name="status" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="power_contact_cnmc_marketer_form" model="ir.ui.view">
        <field name="name">power.contact.cnmc.marketer.form</field>
